          },
          "xcCollectWebAppName": {
            "value": "[parameters('xcCollectWebAppName')]"
          },
          "xcSearchWebAppName": {
            "value": "[parameters('xcSearchWebAppName')]"
          },
          "maOpsWebAppName": {
